# DataAnalyzer AI Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Google Gemini AI API Key
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# OPTIONAL: AI Model Configuration
# =============================================================================
# Google Gemini model to use (default: gemini-2.5-flash)
# Options: gemini-2.5-flash, gemini-1.5-pro, gemini-1.5-flash
MODEL_NAME=gemini-2.5-flash

# =============================================================================
# OPTIONAL: Performance Settings
# =============================================================================
# Timeout for AI responses in seconds (default: 60)
TIMEOUT_SECONDS=60

# Maximum file size for uploads in MB (default: 10)
MAX_FILE_SIZE_MB=10

# =============================================================================
# OPTIONAL: Directory Configuration
# =============================================================================
# Base directory for the application (default: current directory)
# BASE_DIR=/path/to/your/dataanalyzer

# Data directory for input files (default: ./data)
# DATA_DIR=./data

# Output directory for generated files (default: ./output)
# OUTPUT_DIR=./output

# Temporary directory for processing (default: ./temp)
# TEMP_DIR=./temp

# =============================================================================
# OPTIONAL: Web Application Settings
# =============================================================================
# Streamlit server port (default: 8501)
# STREAMLIT_PORT=8501

# Streamlit server host (default: localhost)
# STREAMLIT_HOST=localhost

# =============================================================================
# OPTIONAL: Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# LOG_LEVEL=INFO

# Log file path (default: logs to console only)
# LOG_FILE=./logs/dataanalyzer.log

# =============================================================================
# OPTIONAL: Advanced Settings
# =============================================================================
# Enable debug mode for development (default: False)
# DEBUG_MODE=False

# Maximum number of retries for API calls (default: 3)
# MAX_RETRIES=3

# Enable automatic chart saving (default: True)
# AUTO_SAVE_CHARTS=True

# Chart image format: png, jpg, svg (default: png)
# CHART_FORMAT=png

# Chart DPI for high-quality images (default: 300)
# CHART_DPI=300

# =============================================================================
# EXAMPLE CONFIGURATION
# =============================================================================
# Here's an example of a complete configuration:

# GEMINI_API_KEY=AIzaSyD1234567890abcdefghijklmnopqrstuvwxyz
# MODEL_NAME=gemini-2.5-flash
# TIMEOUT_SECONDS=120
# MAX_FILE_SIZE_MB=50
# STREAMLIT_PORT=8502
# LOG_LEVEL=DEBUG
# DEBUG_MODE=True
# AUTO_SAVE_CHARTS=True
# CHART_FORMAT=png
# CHART_DPI=300